<%- include('../includes/header') -%>
<%- include('../includes/navbar') -%>
<div class="container-sm p-3 shadow-sm mb-4">
    <form class="row g-3" action="/buscarCategoria" method="post">
        <div class="col-auto">
            <a class="btn btn-primary" href="/cadastrarCategoria">Cadastrar Categoria</a>
        </div>
        <div class="col-auto">
          <input type="text" class="form-control" name="nome" placeholder="Categoria">
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary mb-3">Buscar</button>
        </div>
    </form>
</div>
<div class="container-sm p-5 shadow-sm">
    <table class="table table-hover">
        <tr>
            <th>ID</th>
            <th>Categoria</th>
            <th colspan="2">Ações</th>
        </tr>
        <% listaDeCategoria.forEach(categoria => { %>
            <tr>
                <td><%- categoria.id_categoria %></td>
                <td><%- categoria.nome_categoria %></td>
                <td><a href="/alterarCategoria/<%- categoria.id_categoria %>">Editar</a></td>
                <td><a href="/deletarCategoria/<%- categoria.id_categoria %>">Excluir</a></td>
            </tr>
        <% }) %>
    </table>
</div>
<%- include('../includes/footer') -%>