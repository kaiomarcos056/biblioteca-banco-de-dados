<%- include('../includes/header') -%>
<%- include('../includes/navbar') -%>


    <div class="container-sm p-3 shadow-sm mb-4 mt-5">
        <form class="row m-2" action="/buscarCategoria" method="post">
            <div class="col-2">
                <a class="btn btn-success" href="/cadastrarCategoria">Cadastrar Categoria</a>
            </div>
            <div class="col-5 offset-md-4">
              <input type="text" class="form-control" name="nome" placeholder="Categoria">
            </div>
            <div class="col-auto">
              <button type="submit" class="btn btn-primary mb-3">Buscar</button>
            </div>
        </form>
    </div>

    <div class="container-sm p-5 shadow-sm">
        <table class="table table-hover">
            <tr>
                <th>ID</th>
                <th>Categoria</th>
                <th colspan="2">Ações</th>
            </tr>
            <% listaDeCategoria.forEach(categoria => { %>
                <tr>
                    <td><%- categoria.id_categoria %></td>
                    <td><%- categoria.nome_categoria %></td>
                    <td><a href="/alterarCategoria/<%- categoria.id_categoria %>" class="btn btn-warning">Editar</a></td>
                    <td><a href="/deletarCategoria/<%- categoria.id_categoria %>" class="btn btn-danger">Excluir</a></td>
                </tr>
            <% }) %>
        </table>
    </div>



<%- include('../includes/footer') -%>