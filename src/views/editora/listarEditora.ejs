<%- include('../includes/header') -%>
<%- include('../includes/navbar') -%>
<div class="container-sm p-3 shadow-sm mb-4 mt-5">
    <form class="row m-2" action="/buscarEditora" method="post">
        <div class="col-2">
            <a class="btn btn-success" href="/cadastrarEditora">Cadastrar Editora</a>
        </div>
        <div class="col-5 offset-md-4">
          <input type="text" class="form-control" name="nome" placeholder="Editora">
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary mb-3">Buscar</button>
        </div>
    </form>
</div>
<div class="container-sm p-5 shadow-sm">
    <table class="table table-hover">
        <tr>
            <th>ID</th>
            <th>Editora</th>
            <th colspan="2">Ações</th>
        </tr>
        <% listaEditora.forEach(editora => { %>
            <tr>
                <td><%- editora.id_editora %></td>
                <td><%- editora.nome_editora %></td>
                <td><a href="/alterarEditora/<%- editora.id_editora %>" class="btn btn-warning">Editar</a></td>
                <td><a href="/deletarEditora/<%- editora.id_editora %>" class="btn btn-danger">Excluir</a></td>
            </tr>
        <% }) %>
    </table>
</div>
<%- include('../includes/footer') -%>