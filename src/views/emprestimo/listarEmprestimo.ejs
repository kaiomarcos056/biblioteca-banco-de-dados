<%- include('../includes/header') -%>
<%- include('../includes/navbar') -%>
<div class="container-sm p-3 shadow-sm mb-4 mt-5">
    <form class="row m-2" action="/buscarEmprestimo" method="post">
        <div class="col-2">
            <a class="btn btn-success" href="/alugarLivro">Alugar Livro</a>
        </div>
        <div class="col-5 offset-md-4">
          <input type="text" class="form-control" name="nome" placeholder="Livro">
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary mb-3">Buscar</button>
        </div>
    </form>
</div>
<div class="container-sm p-5 shadow-sm">
    <table class="table table-hover">
        <tr>
            <th>Capa</th>
            <th>Livro</th>
            <th>Leitor</th>
            <th>Dt Emprestimo</th>
            <th>Dt Devolução</th>
            <th colspan="2">Ações</th>
        </tr>
        <% listaEmprestimo.forEach(emprestimo => { %>
            <tr>
                <td><img src="<%- emprestimo.capa %>" height="100"></td>
                <td><%- emprestimo.nome_livro %></td>
                <td><%- emprestimo.nome_leitor %></td>
                <td><%- emprestimo.data_emprestimo %></td>
                <td><%- emprestimo.data_devolucao %></td>
                <td><a href="/alterarEmprestimo/<%- emprestimo.id_livro %>/<%- emprestimo.id_leitor %>" class="btn btn-warning">Editar</a></td>
                <td><a href="/devolverLivro/<%- emprestimo.id_livro %>/<%- emprestimo.id_leitor %>" class="btn btn-success">Devolver</a></td>
            </tr>
        <% }) %>
    </table>
</div>
<%- include('../includes/footer') -%>