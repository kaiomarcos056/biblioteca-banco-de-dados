<%- include('../includes/header') -%>
<%- include('../includes/navbar') -%>
<div class="container-sm p-3 shadow-sm mb-4 mt-5">
    <form class="row m-2" action="/buscarLivro" method="post">
        <div class="col-2">
            <a class="btn btn-success" href="/cadastrarLivro">Cadastrar Livro</a>
        </div>
        <div class="col-5 offset-md-4">
          <input type="text" class="form-control" name="nome" placeholder="Livro">
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary mb-3">Buscar</button>
        </div>
    </form>
</div>
<div class="container-sm p-5 shadow-sm">
    <table class="table table-hover">
        <tr>
            <th>ID</th>
            <th>Capa</th>
            <th>Livro</th>
            <th>Quantidade</th>
            <th>Autor</th>
            <th colspan="2">Ações</th>
        </tr>
        <% listaLivro.forEach(livro => { %>
            <tr>
                <td><%- livro.id_livro %></td>
                <td><img src="<%- livro.capa %>" height="100"></td>
                <td><%- livro.nome_livro %></td>
                <td><%- livro.quantidade %></td>
                <td><%- livro.nome_autor %></td>
                <td><a href="/alterarLivro/<%- livro.id_livro %>" class="btn btn-warning">Editar</a></td>
                <td><a href="/deletarLivro/<%- livro.id_livro %>" class="btn btn-danger">Excluir</a></td>
            </tr>
        <% }) %>
    </table>
</div>
<%- include('../includes/footer') -%>