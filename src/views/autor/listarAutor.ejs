<%- include('../includes/header') -%>
<%- include('../includes/navbar') -%>
<div class="container-sm p-3 shadow-sm mb-4">
    <form class="row g-3" action="/buscarAutor" method="post">
        <div class="col-auto">
            <a class="btn btn-primary" href="/cadastrarAutor">Cadastrar Autor</a>
        </div>
        <div class="col-auto">
          <input type="text" class="form-control" name="nome" placeholder="Autor">
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-primary mb-3">Buscar</button>
        </div>
    </form>
</div>
<div class="container-sm p-5 shadow-sm">
    <table class="table table-hover">
        <tr>
            <th>ID</th>
            <th>Autor</th>
            <th colspan="2">Ações</th>
        </tr>
        <% listaDeAutores.forEach(autor => { %>
            <tr>
                <td><%- autor.id_autor %></td>
                <td><%- autor.nome_autor %></td>
                <td><a href="/alterarAutor/<%- autor.id_autor %>">Editar</a></td>
                <td><a href="/deletarAutor/<%- autor.id_autor %>">Excluir</a></td>
            </tr>
        <% }) %>
    </table>
</div>
<%- include('../includes/footer') -%>